<div class="login-container">
  <button type="button" class="close pull-right" ng-click="cancel()">&times;</button>
  <div class="clearfix"></div>
  <h3 class="center login-form">Login</h3>
  <form class="login-form">
    <div class="form-group">
      <label for="username">Username</label>
      <input type="text" name="username" ng-model="username" class="form-control">
    </div>
    <div class="form-group">
      <label for="password">Password</label>
      <input type="password" name="password" ng-model="password" class="form-control">
    </div>
    <div class="error-flash"></div>
    <button class="btn btn-default review-button form-control purple" ng-click="login()">Login</button>
  </form>
  <br>
  <br>
</div>

<style>
.login-form {
  padding: 0 60px 20px 60px;
}
h3.login-form {
  margin-top: 0;
  padding-top: 0;
}
.login-container {
  padding: 10px;
}

</style>